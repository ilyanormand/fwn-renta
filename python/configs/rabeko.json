{
    "vendor": {
        "name": "Rabeko",
        "currency": "EUR",
        "language": "fr"
    },
    "header": {
        "fields": [
            {
                "name": "invoice_number",
                "regex": "Facture\\s+N°\\s*:?\\s*(\\w+)",
                "group": 1
            },
            {
                "name": "invoice_date",
                "regex": "Date\\s*:?\\s*(\\d{1,2}/\\d{1,2}/\\d{4})",
                "group": 1,
                "type": "date"
            }
        ]
    },
    "table": {
        "strategy": "pdfplumber_table",
        "min_columns": 5,
        "header_keywords": [
            "désignation",
            "quantité",
            "prix",
            "total"
        ],
        "columns": [
            {
                "name": "description",
                "index": 0,
                "type": "string"
            },
            {
                "name": "quantity",
                "index": 1,
                "type": "number"
            },
            {
                "name": "unit_price",
                "index": 2,
                "type": "number"
            },
            {
                "name": "total",
                "index": 4,
                "type": "number"
            }
        ]
    },
    "footer": {
        "fields": [
            {
                "name": "subtotal",
                "regex": "Montant total\\s*([\\d.,]+)",
                "group": 1,
                "type": "number"
            },
            {
                "name": "total",
                "regex": "Montant total\\s*([\\d.,]+)",
                "group": 1,
                "type": "number"
            }
        ]
    }
}