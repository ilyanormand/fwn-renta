{
  "vendor": {
    "name": "Buchsteiner",
    "currency": "EUR",
    "language": "de"
  },
  "header": {
    "fields": [
      {
        "name": "invoice_number",
        "regex": "Rechnung\\s+Nr\\.\\s+(\\d+)",
        "group": 1
      },
      {
        "name": "invoice_date",
        "regex": "Datum:\\s+(\\d{2}\\.\\d{2}\\.\\d{4})",
        "group": 1,
        "type": "date"
      }
    ]
  },
  "table": {
    "strategy": "pdfplumber_table",
    "header_keywords": [
      "pos",
      "artikel",
      "menge",
      "preis"
    ],
    "columns": [
      {
        "name": "position",
        "index": 0,
        "type": "string"
      },
      {
        "name": "sku",
        "index": 1,
        "type": "string"
      },
      {
        "name": "description",
        "index": 2,
        "type": "string"
      },
      {
        "name": "quantity",
        "index": 3,
        "type": "number"
      },
      {
        "name": "unit_price",
        "index": 5,
        "type": "number"
      },
      {
        "name": "total",
        "index": 6,
        "type": "number"
      }
    ]
  },
  "footer": {
    "fields": [
      {
        "name": "subtotal",
        "regex": "Gesamt Netto\\s*([\\d.,]+)",
        "group": 1,
        "type": "number"
      },
      {
        "name": "total",
        "regex": "Gesamtbetrag\\s*([\\d.,]+)",
        "group": 1,
        "type": "number"
      }
    ]
  }
}