{
    "vendor": {
        "name": "DYNVEO",
        "currency": "EUR",
        "language": "fr"
    },
    "header": {
        "fields": [
            {
                "name": "invoice_number",
                "regex": "(?:Facture|Invoice).*?(\\d{4,})",
                "group": 1,
                "type": "string"
            },
            {
                "name": "invoice_date",
                "regex": "(\\d{1,2}[\\/\\-\\.]\\d{1,2}[\\/\\-\\.]\\d{4})",
                "group": 1,
                "type": "date"
            },
            {
                "name": "name",
                "regex": "(FITNESS WORLD NUTRITION|FWN)",
                "group": 1,
                "type": "string",
                "target": "customer"
            }
        ]
    },
    "table": {
        "strategy": "pdfplumber_table",
        "header_keywords": [
            "référence",
            "produit",
            "prix unitaire",
            "quantité"
        ],
        "columns": [
            {
                "name": "reference",
                "index": 0,
                "type": "string"
            },
            {
                "name": "description",
                "index": 1,
                "type": "string"
            },
            {
                "name": "unit_price",
                "index": 3,
                "type": "number"
            },
            {
                "name": "quantity",
                "index": 4,
                "type": "number"
            },
            {
                "name": "total",
                "index": 5,
                "type": "number"
            }
        ]
    },
    "footer": {
        "fields": [
            {
                "name": "gross_amount",
                "regex": "Total\\s+produits\\s*(?:\\d+\\s+)?([\\d\\s.,]+)\\s*€",
                "group": 1,
                "type": "number"
            },
            {
                "name": "subtotal",
                "regex": "Total\\s*\\(HT\\)\\s*€?\\s*([\\d\\s.,]+)",
                "group": 1,
                "type": "number"
            },
            {
                "name": "discount_amount",
                "regex": "Total\\s+Réductions\\s*([\\d\\s.,-]+)\\s*€?",
                "group": 1,
                "type": "number"
            },
            {
                "name": "discount",
                "regex": "Total\\s+Réductions\\s*([\\d\\s.,-]+)\\s*€?",
                "group": 1,
                "type": "number"
            },
            {
                "name": "tax",
                "regex": "Taxe\\s+totale\\s*([\\d\\s.,]+)\\s*€?",
                "group": 1,
                "type": "number"
            },
            {
                "name": "total",
                "regex": "^\\s*Total\\s+([\\d\\s.,]+)\\s*€",
                "group": 1,
                "type": "number"
            }
        ]
    }
}