{
    "vendor": {
        "name": "Ingredient SuperFood",
        "currency": "EUR",
        "language": "fr"
    },
    "header": {
        "fields": [
            {
                "name": "invoice_number",
                "regex": "Facture\\s+N°\\s*([\\d-]+)",
                "group": 1
            },
            {
                "name": "invoice_date",
                "regex": "Date\\s+d'émission\\s*:\\s*(\\d{2}/\\d{2}/\\d{4})",
                "group": 1,
                "type": "date"
            }
        ]
    },
    "table": {
        "strategy": "text_regex",
        "start_marker": "Désignation\\s+Quantité",
        "end_marker": "Total\\s+HT",
        "row_pattern": "^(.+?)\\s+([\\d,]+)\\s+([\\d,]+)\\s+[\\d.]+\\s*%\\s+([\\d\\s,]+)$",
        "columns": [
            {
                "name": "description",
                "regex_group": 1,
                "type": "string"
            },
            {
                "name": "quantity",
                "regex_group": 2,
                "type": "number"
            },
            {
                "name": "unit_price",
                "regex_group": 3,
                "type": "number"
            },
            {
                "name": "total",
                "regex_group": 4,
                "type": "number"
            }
        ]
    },
    "footer": {
        "fields": [
            {
                "name": "subtotal",
                "regex": "Total\\s+HT\\s*([\\d\\s,.]+)\\s*€",
                "group": 1,
                "type": "number"
            },
            {
                "name": "tax",
                "regex": "TVA\\s*[\\d.]+\\s*%\\s*([\\d\\s,.]+)\\s*€",
                "group": 1,
                "type": "number"
            },
            {
                "name": "total",
                "regex": "Total\\s+TTC\\s*([\\d\\s,.]+)\\s*€",
                "group": 1,
                "type": "number"
            }
        ]
    }
}