{
    "vendor": {
        "name": "Addict Sport Nutrition",
        "currency": "EUR",
        "language": "fr"
    },
    "header": {
        "fields": [
            {
                "name": "invoice_number",
                "regex": "Facture N° (\\d+)",
                "group": 1
            },
            {
                "name": "invoice_date",
                "regex": "Fait le : (\\d{2}/\\d{2}/\\d{2})",
                "group": 1,
                "type": "date"
            },
            {
                "name": "name",
                "regex": "FITNESS WORLD NUTRITION",
                "group": 0,
                "target": "customer"
            }
        ]
    },
    "table": {
        "strategy": "pdfplumber_table",
        "header_keywords": [
            "code",
            "libellé",
            "pu",
            "prix ht"
        ],
        "columns": [
            {
                "name": "sku",
                "index": 0,
                "type": "string"
            },
            {
                "name": "description",
                "index": 1,
                "type": "string"
            },
            {
                "name": "quantity",
                "index": 2,
                "type": "number"
            },
            {
                "name": "unit_price",
                "index": 3,
                "type": "number"
            },
            {
                "name": "total",
                "index": 5,
                "type": "number"
            }
        ]
    },
    "footer": {
        "fields": [
            {
                "name": "subtotal",
                "regex": "Total HT.*?([\\d\\s,]+)",
                "group": 1,
                "type": "number"
            },
            {
                "name": "total",
                "regex": "Total TTC.*?([\\d\\s,]+)",
                "group": 1,
                "type": "number"
            }
        ]
    }
