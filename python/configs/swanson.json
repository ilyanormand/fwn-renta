{
    "vendor": {
        "name": "Swanson",
        "currency": "USD",
        "language": "en"
    },
    "header": {
        "fields": [
            {
                "name": "invoice_number",
                "regex": "Invoice\\s+(?:No\\.?|#)\\s*:?\\s*(\\w+)",
                "group": 1
            },
            {
                "name": "invoice_date",
                "regex": "Date\\s*:?\\s*(\\d{1,2}/\\d{1,2}/\\d{2,4})",
                "group": 1,
                "type": "date"
            }
        ]
    },
    "table": {
        "strategy": "pdfplumber_table",
        "header_keywords": [
            "item",
            "description",
            "qty",
            "price",
            "amount"
        ],
        "columns": [
            {
                "name": "sku",
                "index": 0,
                "type": "string"
            },
            {
                "name": "description",
                "index": 1,
                "type": "string"
            },
            {
                "name": "quantity",
                "index": 3,
                "type": "number"
            },
            {
                "name": "unit_price",
                "index": 4,
                "type": "number"
            },
            {
                "name": "total",
                "index": 5,
                "type": "number"
            }
        ]
    },
    "footer": {
        "fields": [
            {
                "name": "subtotal",
                "regex": "Amount w/o VAT:\\s*€\\s*([\\d.,]+)",
                "group": 1,
                "type": "number"
            },
            {
                "name": "total",
                "regex": "Total with VAT:\\s*€\\s*([\\d.,]+)",
                "group": 1,
                "type": "number"
            }
        ]
    }
}