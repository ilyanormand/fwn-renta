{
    "vendor": {
        "name": "Liot",
        "currency": "EUR",
        "language": "fr"
    },
    "header": {
        "fields": [
            {
                "name": "invoice_number",
                "regex": "Facture\\s+N°\\s*:?\\s*(\\w+)",
                "group": 1
            },
            {
                "name": "invoice_date",
                "regex": "Date\\s*:?\\s*(\\d{1,2}/\\d{1,2}/\\d{4})",
                "group": 1,
                "type": "date"
            }
        ]
    },
    "table": {
        "strategy": "text_regex",
        "start_marker": "Produit\\s+Réf\\.",
        "end_marker": "TOTAL\\s+H\\.T\\.",
        "row_pattern": "^(\\w+)\\s+(.+?)\\s+(\\d+)\\s+(\\d+)\\s+KG\\s+([\\d,]+)\\s+([\\d,]+)\\s+([\\d,]+)\\s+\\d+$",
        "columns": [
            {
                "name": "sku",
                "regex_group": 1,
                "type": "string"
            },
            {
                "name": "description",
                "regex_group": 2,
                "type": "string"
            },
            {
                "name": "quantity",
                "regex_group": 4,
                "type": "number"
            },
            {
                "name": "unit_price",
                "regex_group": 6,
                "type": "number"
            },
            {
                "name": "total",
                "regex_group": 7,
                "type": "number"
            }
        ]
    },
    "footer": {
        "fields": [
            {
                "name": "subtotal",
                "regex": "TOTAL\\s+H\\.T\\..*?([\\d,.]+)",
                "group": 1,
                "type": "number"
            },
            {
                "name": "total",
                "regex": "TTC\\s+EUR.*?([\\d,.]+)",
                "group": 1,
                "type": "number"
            }
        ]
    }
}