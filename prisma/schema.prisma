generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Shop {
  id               String   @id
  shop             String   @unique
  adminAccessToken String
  scopes           String
  installedAt      DateTime
}

model Supplier {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())
  invoices  Invoice[]
}

model Product {
  id            String        @id @default(cuid())
  name          String
  skuFwn        String        @unique
  createdAt     DateTime      @default(now())
  cmpHistory    CMPRecord[]
  invoiceItems  InvoiceItem[]
  shopifySales  ShopifySale[]
  supplierLinks SupplierSKU[]
}

model SupplierSKU {
  id        String  @id @default(cuid())
  productId String
  sku       String
  brand     String?
  product   Product @relation(fields: [productId], references: [id])
}

model Invoice {
  id            String        @id @default(cuid())
  supplierId    String
  invoiceDate   DateTime
  shippingFee   Float         @default(0)
  discount      Float         @default(0)
  tax           Float         @default(0)
  currency      String        @default("EUR")
  rate          Float         @default(1.0)
  status        InvoiceStatus
  pdfFileName   String?
  pdfFilePath   String?
  pdfFileSize   Int?
  pdfUploadedAt DateTime?
  createdAt     DateTime      @default(now())
  supplier      Supplier      @relation(fields: [supplierId], references: [id])
  items         InvoiceItem[]
  logs          LogEntry[]
}

model InvoiceItem {
  id          String   @id @default(cuid())
  invoiceId   String
  productId   String?
  sku         String
  quantity    Int
  unitPrice   Float
  total       Float
  description String?
  product     Product? @relation(fields: [productId], references: [id])
  invoice     Invoice  @relation(fields: [invoiceId], references: [id])
}

model CMPRecord {
  id           String   @id @default(cuid())
  productId    String
  calculatedAt DateTime @default(now())
  quantity     Int
  totalCost    Float
  cmpValue     Float
  product      Product  @relation(fields: [productId], references: [id])
}

model ShopifySale {
  id        String   @id @default(cuid())
  orderId   String
  date      DateTime
  sku       String
  quantity  Int
  unitPrice Float
  cmpAtSale Float
  marginPct Float
  productId String?
  product   Product? @relation(fields: [productId], references: [id])
}

model LogEntry {
  id        String   @id @default(cuid())
  invoiceId String?
  type      LogType
  status    String
  message   String
  createdAt DateTime @default(now())
  invoice   Invoice? @relation(fields: [invoiceId], references: [id])
}

model Job {
  id          String    @id @default(cuid())
  type        JobType
  status      JobStatus @default(PENDING)
  data        String
  result      String?
  error       String?
  attempts    Int       @default(0)
  maxAttempts Int       @default(3)
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([status, type])
  @@index([createdAt])
}

enum InvoiceStatus {
  PROCESSING
  PENDING_REVIEW
  SUCCESS
  ERROR
  CANCELLED
}

enum LogType {
  UPLOAD
  PROCESSING
  PARSING
  VALIDATION
  CONFIRMATION
  ERROR
}

enum JobType {
  PDF_PROCESSING
  CMP_CALCULATION
  SHOPIFY_SYNC
  GOOGLE_SHEETS_EXPORT
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}
